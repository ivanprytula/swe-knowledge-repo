# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4

# It is recommended to keep unchanged
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

# Docstrings and comments use max_line_length = 79
[*.py]
max_line_length = 119

# Makefile always use tabs for indentation
[Makefile]
indent_style = tab

[*.{yaml,yml}]
indent_size = 2
